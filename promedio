#include <iostream>

using namespace std;

int main(int argc, char** argv)
{
    
    int b, su;
    double prom;
    
    cout << "ingresa la cantidad de las calificaciones: " << endl;
    cin >> b;
    
    int a[b];
    for (int i =0; i< b; i++){
        cout << "ingre la calificaciones " << i+1 << endl;
        cin >>a[i];
    }
    for (int j = 0; j < b; j++){
    cout <<"la calificacion "<< j+1 << ": "<< a[j]<< endl;
       su = su + a[j];
    }
    prom = su / b;
    
    cout << "\n";
    cout << "El promedio es: " << prom;
    
    
 

}
